<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/backkk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_2"
        android:layout_alignParentTop="true"
        android:gravity="left">


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:src="@drawable/star22"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:src="@drawable/star22"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user1"
            android:layout_marginLeft="160dp"
            android:drawableLeft="@drawable/baseline_account_box_24"
            android:gravity="center"
            android:text="Ram"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"

            />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sun"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@id/nav_2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#e9f5db"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black"
        android:text="Sunday"
        android:textSize="40dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mon"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@id/sun"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#cfe1b9"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black"
        android:text="Monday"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tue"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@id/mon"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#b5c99a"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-thin"
        android:text="Tuesday"
        android:textSize="40dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/wed"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@id/tue"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#97a97c"
        android:fontFamily="sans-serif-thin"
        android:text="Wednesday"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/thr"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@id/wed"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#87986a"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black"
        android:text="Thrusday"
        android:textSize="40dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fri"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@id/thr"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#718355"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black"
        android:text="Friday"
        android:textSize="40dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sat"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@id/fri"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#718355"
        android:fontFamily="sans-serif-thin"
        android:text="Saturday"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />


</RelativeLayout>